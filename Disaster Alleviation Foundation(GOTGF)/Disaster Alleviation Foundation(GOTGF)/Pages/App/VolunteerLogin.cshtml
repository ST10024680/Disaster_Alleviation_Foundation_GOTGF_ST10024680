@page
@model Disaster_Alleviation_Foundation_GOTGF_.Pages.App.VolunteerLoginModel
@{
    Layout = null;
}

<head>
    <title>Incident Report - Humanitarian Aid Platform</title>
    <link rel="stylesheet" href="~/css/report.css">
    <link rel="stylesheet" href="~/css/Main.css">
</head>
<body>
    <main>
        <header>
            <nav class="navbar">
                <h1>Humanitarian Aid</h1>
                <ul class="nav-links">
                    <li><a asp-page="/App/Home">Home</a></li>
                    <li><a asp-page="/App/Reporting">Report Incident</a></li>
                    <li><a asp-page="/App/Donate">Donate</a></li>
                    <li><a asp-page="/App/VolunteerLogin">Volunteer</a></li>
                </ul>
            </nav>
        </header>

        <section class="incident-report-form">
            <h2>Login</h2>
            <form method="post" >

                <div class="form-group">
                    <label asp-for="LName" class="control-label">Name</label>
                    <input asp-for="LName" class="form-control" required />
                    <span asp-validation-for="LName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LEmail" class="control-label">Email</label>
                    <input asp-for="LEmail" class="form-control" required />
                    <span asp-validation-for="LEmail" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
            <div class="footer">
                <span>
                    <a asp-page="./Volunteer">Register</a>
                </span>
               
            </div>

        </section>
    </main>


</body>


